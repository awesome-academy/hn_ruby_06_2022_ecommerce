<div class="grid">
  <div class="grid__row grid-column">
    <div class="grid-column-2">
      <nav class="category">
        <h3 class="category-heading">
          <i class="fa fa-list-ul" aria-hidden="true"></i>
          <%= t ".category" %>
        </h3>
        <div class="category-list-container">
          <ul class="category-list">
            <%= render partial: "shared/category", collection: @categories %>
          </ul>
        </div>
      </nav>
    </div>
    <div class="grid-column-10">
      <div class="home-filter">
        <span class="filter-span"><%= t ".order_by" %></span>
        <%= button_to t(".popular"), books_path, method: :get, params: {sort: :popular},
          class: "filter-button filter-button-active", id: "orderNormal", remote: true
        %>
        <%= button_to t(".latest"), books_path, method: :get, params: {sort: :latest},
          class: "filter-button", id: "orderNew", remote: true
        %>
        <%= button_to t(".selling"), books_path, method: :get, params: {sort: :selling},
          class: "filter-button", id: "orderSale", remote: true
        %>
        <div class="filter-price">
          <span><%= t ".price" %></span>
          <i class="fa fa-angle-down" aria-hidden="true"></i>
          <ul class="filter-price-list">
            <li>
              <%= link_to t(".order_1"), books_path(sort: "asc"),
                class: "filter-price-link", id:  "orderAsc", remote: true
              %>
            </li>
            <li>
              <%= link_to t(".order_2"), books_path(sort: "desc"),
                class: "filter-price-link", id:  "orderAsc", remote: true
              %>
            </li>
          </ul>
        </div>
      </div>
      <div class="home-product">
        <div class="grid__row" id="home-product">
          <%= render partial: "shared/book", collection: @books %>
        </div>
      </div>
      <div id="pagy">
        <%= render "shared/pagy", locals: {pagy: @pagy} %>
      </div>
      <div class="home-controller">
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag "home.js", media: "all", "data-turbolinks-track": "reload" %>
