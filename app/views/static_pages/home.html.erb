<div class="grid">
  <div class="grid__row grid-column">
    <div class="grid-column-2">
      <nav class="category">
        <h3 class="category-heading">
          <i class="fa fa-list-ul" aria-hidden="true"></i>
          <%= t ".category" %>
        </h3>
        <div class="category-list-container">
          <ul class="category-list">
            <%= render "categories/index" %>
          </ul>
        </div>
      </nav>
    </div>
    <div class="grid-column-10">
      <div class="home-filter">
        <span class="filter-span"><%= t ".order_by" %></span>
        <button class="filter-button filter-button-active" id="orderNormal"><%= t ".popular" %></button>
        <button class="filter-button" id="orderNew"><%= t ".latest" %></button>
        <button class="filter-button" id="orderSale"><%= t ".selling" %></button>
        <div class="filter-price">
          <span><%= t ".price" %></span>
          <i class="fa fa-angle-down" aria-hidden="true"></i>
          <ul class="filter-price-list">
            <li>
              <a href="#" class="filter-price-link" id="orderAsc"><%= t ".order_1" %></a>
            </li>
            <li>
              <a href="#" class="filter-price-link" id="orderDesc"><%= t ".order_2" %></a>
            </li>
          </ul>
        </div>
      </div>
      <div class="home-product">
        <div class="grid__row">
          <%= render "books/index" %>
        </div>
      </div>
      <div class="home-controller">
      </div>
    </div>
  </div>
</div>
