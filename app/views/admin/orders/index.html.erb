<% provide :title, t(".title") %>
<h1 class="h3 mb-2 text-gray-800">
  <%= t ".title" %>
</h1>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col-8">
        <%= render "filter" %>
      </div>
      <div class="col-4">
      </div>
    </div>
    </form>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th><%= t ".stt" %></th>
            <th><%= sort_link(@search, :name, t(".name"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :phone, t(".phone"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :address, t(".address"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :updated_at, t(".created_at"), class: "edit-link") %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "order", collection: @orders %>
        </tbody>
      </table>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
<div id="order-content"></div>
