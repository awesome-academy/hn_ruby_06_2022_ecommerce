<% provide :title, t(".title") %>
<h1 class="h3 mb-2 text-gray-800">
  <%= t ".title" %> |
  <%= link_to new_admin_book_path do %>
    <label class="btn btn-outline-primary">
      <i class="fa fa-folder-plus"></i>
      <%= t ".new_book" %>
    </label>
  <% end %>
</h1>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
      <div class="col">
        <%= render "search" %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th><%= t ".stt" %></th>
            <th><%= sort_link(@search, :name, t(".name"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :price, t(".price"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :category, t(".category"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :author, t(".author"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :quantity, t(".quantity"), class: "edit-link") %></th>
            <th><%= sort_link(@search, :sold, t(".sold"), class: "edit-link") %></th>
            <th><%= t ".image" %></th>
            <th><%= sort_link(@search, :status, t(".status"), class: "edit-link") %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "book", collection: @books %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= javascript_pack_tag "home.js", media: "all", "data-turbolinks-track": "reload" %>
