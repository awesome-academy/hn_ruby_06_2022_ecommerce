<% provide :title, t(".title") %>
<h1 class="h3 mb-2 text-gray-800">
  <%= t ".title" %>
</h1>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col"">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
      <div class="col">
        <%= form_tag("#", method: :get, class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search float-end") do %>
          <%= text_field_tag :admin_search, params[:admin_search],
                                            class: "form-control bg-light border-0 small",
                                            placeholder: t(".search") %>
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <%= t ".search" %>
            <i class="fa fa-search" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th><%= t ".stt" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".phone" %></th>
            <th><%= t ".address" %></th>
            <th><%= t ".total_order" %>
            <th><%= t ".total_money_order" %>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "user", collection: @users %>
        </tbody>
      </table>
    </div>
  </div>
</div>
