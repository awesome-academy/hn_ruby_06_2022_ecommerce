<div class="body-app">
  <div class="my-body-app">
    <div class="signup">
      <div class="signup-title"><%= t ".reset_password" %></div>
      <div class="signup-form">
        <div class="signup-form-contain">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="field">
              <%= f.label :password, t(".reset_password") %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit t(".update_btn"), class: "checkout_btn_submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
