<div class="box-comment">
  <div class="box-comment-left">
    <%= avatar_image(comment.user.avatar, "comment-userimg") %>
  </div>
  <div class="box-comment-right">
    <div class="box-comment-name" >
      <p><%= comment.user_name %></p>
    </div>
    <div class="rating-star">
      <%= render_star(comment.rate) %>
    </div>
    <p><%= t ".posted" %> <%= time_ago_in_words comment.created_at %> <%= t ".ago" %></p>
    <p><%= comment.content %></p>
    <%= image_tag comment.image, class: "comment-image" if comment.image.attached? %>
  </div>
</div>
<hr>
